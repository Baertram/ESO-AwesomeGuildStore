<GuiXml>
	<Controls>
		<Control name="AwesomeGuildStoreGuildSelectorTemplate" hidden="true" virtual="true">
			<Dimensions x="460" y="50" />
			<Anchor point="LEFT" offsetX="0" offsetY="0" />
			<OnInitialized>
				AwesomeGuildStore.InitializeGuildSelector(self)
			</OnInitialized>
			<Controls>
				<Control name="$(parent)ComboBox" resizeToFitDescendents="true" mouseEnabled="true">
					<Anchor point="LEFT" offsetX="50" />
					<OnInitialized>
						ZO_ComboBox:New(self)
					</OnInitialized>

					<OnMouseUp>
						if(button == 1 and upInside) then
						ZO_ComboBox_DropdownClicked(self)
						end
					</OnMouseUp>

					<Controls>
						<Label name="$(parent)SelectedItemText" inherits="ZO_TooltipIfTruncatedLabel" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED">
							<Dimensions y="35" />
							<DimensionConstraints maxX="450" />
							<Anchor point="TOPLEFT" />

							<OnMouseUp>
								if(button == 1 and upInside) then
								ZO_ComboBox_DropdownClicked(self:GetParent())
								end
							</OnMouseUp>
						</Label>

						<Button name="$(parent)OpenDropdown" inherits="ZO_DropdownButton">
							<Dimensions x="16" y="16" />
							<Anchor point="LEFT" relativeTo="$(parent)SelectedItemText" relativePoint="RIGHT" offsetX="3" />
							<OnClicked>
								ZO_ComboBox_DropdownClicked(self:GetParent())
							</OnClicked>
						</Button>
					</Controls>
				</Control>
			</Controls>
		</Control>

		<Control name="AwesomeGuildStoreMinMaxRangeSliderTemplate" virtual="true">
			<Dimensions x="150" y="16" />
			<Controls>
				<Button name="$(parent)MinSlider" level="2">
					<Dimensions x="10" y="16" />
					<Anchor point="LEFT" />
					<Textures normal="EsoUI/Art/Miscellaneous/scrollbox_elevator.dds" disabled="EsoUI/Art/Miscellaneous/scrollbox_elevator_disabled.dds" />
				</Button>
				<Button name="$(parent)MaxSlider" level="2">
					<Dimensions x="10" y="16" />
					<Anchor point="RIGHT" />
					<Textures normal="EsoUI/Art/Miscellaneous/scrollbox_elevator.dds" disabled="EsoUI/Art/Miscellaneous/scrollbox_elevator_disabled.dds" />
				</Button>
				<Button name="$(parent)RangeSlider" level="1">
					<Dimensions y="10" />
					<Anchor point="LEFT" relativeTo="$(parent)MinSlider" relativePoint="RIGHT" offsetX="-6" />
					<Anchor point="RIGHT" relativeTo="$(parent)MaxSlider" relativePoint="LEFT" offsetX="6"  />
					<Textures normal="AwesomeGuildStore/images/minmaxsliderglow.dds" disabled="AwesomeGuildStore/images/minmaxsliderglow_disabled.dds" />
				</Button>
				<Backdrop name="$(parent)Backdrop" inherits="ZO_SliderBackdrop">
					<Anchor point="LEFT" />
					<Anchor point="RIGHT" />
					<Dimensions y="8" />
				</Backdrop>
			</Controls>
		</Control>
	</Controls>
</GuiXml>